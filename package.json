{
  "name": "ssp",
  "private": true,
  "scripts": {
    "start": "npm run build && concurrently -- 'npm run site:watch' 'npm run client:watch'",
    "site:watch": "presta watch",
    "site:build": "presta build",
    "client:watch": "webpack -w",
    "client:build": "NODE_ENV=production webpack -p",
    "build": "npm run client:build && npm run site:build",
    "netlify": "npm run build && netlify dev",
    "serve": "presta serve",
    "format": "prettier-standard --format",
    "lint": "prettier-standard --lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier-standard --format --staged"
    }
  },
  "dependencies": {
    "@sanity/client": "^1.149.18",
    "@sanity/image-url": "^0.140.19",
    "hypobox": "^2.1.0",
    "hyposcript": "^1.0.1",
    "hypostyle": "^3.1.0",
    "marked": "^2.0.0",
    "operator": "^1.7.0",
    "picoapp": "^3.6.2",
    "vsbl": "^1.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-transform-async-to-generator": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.3.0",
    "core-js": "^3.6.5",
    "husky": "^4.2.5",
    "netlify-cli": "^2.59.0",
    "presta": "^0.28.3",
    "prettier-standard": "^16.3.0",
    "typescript": "^3.9.6",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
